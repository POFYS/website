---
import Layout from '../../components/Layout.astro';
import { config } from '../../config';
import { getArticles, convertStrapiArticle } from '../../utils/strapi';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { calculateReadingTime } from '../../utils/reading-time';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const base = import.meta.env.BASE_URL;

let strapiArticles: any[] = [];
let error: string | null = null;

try {
  const response = await getArticles({ 
    sort: 'publishedAt:desc',
    pageSize: 100,
    locale: lang,
  });
  strapiArticles = response.data
    .map(convertStrapiArticle)
    .filter(article => article !== null)
    .map(article => {
      const plainText = article.body
        .replace(/<[^>]*>/g, ' ')
        .replace(/\s+/g, ' ')
        .trim();
      const readingTime = calculateReadingTime(plainText);
      return {
        ...article,
        readingTime: readingTime
          .replace('min read', 'دقائق قراءة')
          .replace('Less than 1', 'أقل من 1')
      };
    });
} catch (e) {
  console.error('Failed to fetch Strapi articles:', e);
  error = e instanceof Error ? e.message : 'Unknown error';
}

const sortedArticles = strapiArticles.sort((a, b) => 
  new Date(b.date).getTime() - new Date(a.date).getTime()
);
---

<Layout title={`${t('nav.articles')} | POFYS`} description={t('site.description')}>
  <div class="article-page">
    <header class="article-header">
      <h1 class="article-title">{t('article.title')}</h1>
      <p class="article-description">
        {t('article.description')}
      </p>
      <p class="substack-link" dir="rtl">
        {t('article.substack')} <a href={config.social.substack} target="_blank" rel="noopener noreferrer">{t('article.substackName')}</a>
      </p>
      <hr class="article-rule" />
    </header>

    {!error && sortedArticles.length > 0 ? (
      <div class="posts-list">
        {sortedArticles.map((post: any) => (
          <article class="post-item" lang="ar" dir="rtl">
            <h2 class="post-title">
              <a href={`${base}ar/articles/${post.slug}`}>{post.title}</a>
            </h2>

            <div class="post-meta">
              <div class="meta-left">
                {post.date && (
                  <time class="post-date" datetime={new Date(post.date).toISOString()}>
                    {new Date(post.date).toLocaleDateString('ar-YE', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                )}

                {post.author && (
                  <span class="post-author">بقلم {post.author}</span>
                )}
              </div>

              <div class="meta-right">
                {post.readingTime && (
                  <span class="post-reading-time">{post.readingTime}</span>
                )}

                {post.category?.slug && post.category?.name && (
                  <div class="post-categories">
                    <a href={`${base}ar/articles/category/${post.category.slug}`} class="category">{post.category.name}</a>
                  </div>
                )}
              </div>
            </div>

            {post.excerpt && (
              <p class="post-excerpt">{post.excerpt}</p>
            )}

            <a href={`${base}ar/articles/${post.slug}`} class="read-more">{t('article.readMore')}</a>
          </article>
        ))}
      </div>
    ) : !error && (
      <div class="no-posts">
        <p>لا توجد مقالات متاحة بعد.</p>
      </div>
    )}
  </div>
</Layout>

<style>
  .article-page {
    max-width: 800px;
    margin: 0 auto;
  }

  .article-header {
    text-align: center;
    margin-bottom: calc(var(--grid-unit) * 8);
  }

  .article-title {
    font-family: var(--font-arabic) !important;
    font-size: 3.5rem;
    font-weight: 900;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0;
    line-height: 1.1;
    margin-bottom: calc(var(--grid-unit) * 3);
  }

  .article-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: calc(var(--grid-unit) * 2);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .substack-link {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: calc(var(--grid-unit) * 4);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .substack-link a {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .substack-link a:hover,
  .substack-link a:focus {
    color: var(--color-text-primary);
    text-decoration: underline;
  }

  .article-rule {
    height: 4px;
    background-color: var(--color-accent);
    border: none;
    width: 120px;
    margin: 0 auto;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: calc(var(--grid-unit) * 6);
  }

  .post-item {
    border-bottom: 1px solid var(--color-border);
    padding-bottom: calc(var(--grid-unit) * 4);
    letter-spacing: 0;
  }

  .post-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .post-title {
    font-family: var(--font-heading-secondary);
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: calc(var(--grid-unit) * 2);
    letter-spacing: 0;
    word-spacing: 4px;
  }

  .post-title a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-title a:hover,
  .post-title a:focus {
    color: var(--color-accent);
  }

  .post-meta {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: calc(var(--grid-unit));
    margin-bottom: calc(var(--grid-unit) * 2);
    flex-wrap: wrap;
  }

  .meta-left,
  .meta-right {
    display: flex;
    align-items: center;
    gap: calc(var(--grid-unit));
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0;
  }

  .post-reading-time {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0;
  }
  .post-reading-time::after {
    content: "•";
    margin: 0 calc(var(--grid-unit));
    color: var(--color-border);
  }

  .post-author {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-text-muted) !important;
    text-transform: uppercase;
    letter-spacing: 0;
  }

  .post-author::before {
    content: "•";
    margin: 0 calc(var(--grid-unit));
    color: var(--color-border);
  }

  .post-categories {
    display: flex;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit) / 2);
  }

  .category {
    background-color: var(--color-text-primary);
    color: white;
    padding: calc(var(--grid-unit) / 4) calc(var(--grid-unit) / 2);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0;
    border-radius: 2px;
    transition: background-color 0.2s ease;
  }

  .category:hover,
  .category:focus {
    background-color: var(--color-accent);
    text-decoration: none;
  }

  /* Dark mode category styles */
  :global([data-theme="dark"]) .category {
    background-color: var(--color-surface);
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
  }

  :global([data-theme="dark"]) .category:hover,
  :global([data-theme="dark"]) .category:focus {
    background-color: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  .post-excerpt {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: calc(var(--grid-unit) * 2);
    font-size: 1.1rem;
  }

  .read-more {
    font-family: var(--font-heading-secondary);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0;
    color: var(--color-accent);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .read-more:hover,
  .read-more:focus {
    color: var(--color-text-primary);
  }

  .no-posts {
    text-align: center;
    padding: calc(var(--grid-unit) * 6);
    color: var(--color-text-muted);
    font-style: italic;
  }

  .no-posts code {
    background-color: var(--color-surface);
    padding: 2px 4px;
    border-radius: 3px;
    font-family: var(--font-mono);
  }

  .no-posts a {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
  }

  .no-posts a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .article-title {
      font-size: 2.5rem;
    }

    .article-description {
      font-size: 1.125rem;
    }

    .post-title {
      font-size: 1.75rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: calc(var(--grid-unit));
    }

    .meta-right {
      margin-top: calc(var(--grid-unit));
    }
  }
</style>
